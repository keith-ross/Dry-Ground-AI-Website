
# API Configuration
PORT=3001

# SendGrid Configuration - Required for email functionality
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=your_verified_sender@example.com
ADMIN_EMAIL=recipient_address@example.com

# Client-side variables with VITE_ prefix
VITE_SENDGRID_API_KEY=${SENDGRID_API_KEY}
VITE_FROM_EMAIL=${FROM_EMAIL}
VITE_ADMIN_EMAIL=${ADMIN_EMAIL}

# Database Configuration (if using SQLite)
DB_PATH=./data/contact.db

# Node Environment
NODE_ENV=development
